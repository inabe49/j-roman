{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "removeComments": true,
        "declaration": true,
        "sourceMap": true,
        "inlineSources": true
    },
    "filesGlob": [
        "./src/**/*.ts",
        "!./src/**/*.d.ts",
        "./test/**/*.ts",
        "!./test/**/*.d.ts",
        "!./node_modules/**/*.ts",
        "!./typings/**/*.ts"
    ],
    "formatCodeOptions": {
        "indentSize": 4,
        "tabSize": 4,
        "convertTabsToSpaces": true
    },
    "files": [
        "./src/roman.ts",
        "./src/table.ts",
        "./test/convert-test.ts"
    ],
    "compileOnSave": true,
    "buildOnSave": true,
    "exclude": [],
    "atom": {
        "rewriteTsconfig": true
    }
}
