{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "removeComments": true,
        "declaration": true,
        "sourceMap": true,
        "inlineSources": true
    },
    "filesGlob": [
        "./**/*.ts",
        "!./**/*.d.ts",
        "!./node_modules/**/*.ts",
        "!./typings/**/*.ts",
        "./test/**/*.ts"
    ],
    "formatCodeOptions": {
        "indentSize": 4,
        "tabSize": 4,
        "convertTabsToSpaces": true
    },
    "files": [
        "./index.ts"
    ],
    "compileOnSave": true,
    "buildOnSave": true,
    "exclude": [],
    "atom": {
        "rewriteTsconfig": true
    }
}
